pipeline {
    agent any
    tools {
        gradle 'gradle-7.6.1'
        jdk 'jdk-17'
    }
    parameters {
        // DockerHub 사용자명 입력
        string(name: 'DOCKERHUB_USERNAME',  defaultValue: 'academyitwill', description: 'DockerHub 사용자명을 입력하세요.')
        // GitHub  사용자명 입력
        string(name: 'GITHUB_USERNAME',  defaultValue: '2025-07-JAVA-DEVELOPER-162', description: 'GitHub  사용자명을 입력하세요.')
    }	
    environment {
         // ===== Git Repositories =====
        GITHUB_SCRIPT_URL = "https://github.com/${GITHUB_USERNAME}/kubernetes-guest-script.git"
        GITHUB_SOURCE_URL = "https://github.com/${GITHUB_USERNAME}/kubernetes-guest-source.git"
        STEP_NUM = "step21"
    }

    stages {
        stage('Source Build') {
            steps {
                // 소스파일 체크아웃
                git branch: 'main', url: "${GITHUB_SOURCE_URL}"
                // 소스 빌드
                // 755권한 필요 (윈도우에서 Git으로 소스 업로드시 권한은 644)
                sh "chmod +x ./gradlew"
                sh "gradle clean build"
            }
        }
        stage('Container Build') {
            steps {	
                // 릴리즈파일 체크아웃
                checkout scmGit(branches: [[name: '*/main']], 
                    extensions: [[$class: 'SparseCheckoutPaths', 
                    sparseCheckoutPaths: [[path: "/${STEP_NUM}"]]]], 
                    userRemoteConfigs: [[url: "${GITHUB_SCRIPT_URL}"]])
                // jar 파일 복사
                sh "cp ./build/libs/app.jar ./${STEP_NUM}/build/docker/app.jar"
                // 컨테이너 빌드 및 업로드
                sh "docker build -t ${DOCKERHUB_USERNAME}/guest ./${STEP_NUM}/build/docker"
                script{
                    if (DOCKERHUB_USERNAME == "academyitwill") {
                        sh "docker push ${DOCKERHUB_USERNAME}/guest:v1"
                    }else {
                        sh "docker push ${DOCKERHUB_USERNAME}/guest:v1"
                    }
                }
            }
        }

        stage('K8S Deploy') {
            steps {
                // 쿠버네티스 배포 
                sh "kubectl apply -f ./${STEP_NUM}/deploy/k8s/namespace.yaml"
		sh "kubectl apply -f ./${STEP_NUM}/deploy/k8s/configmap.yaml"
		sh "kubectl apply -f ./${STEP_NUM}/deploy/k8s/secret.yaml"
		sh "kubectl apply -f ./${STEP_NUM}/deploy/k8s/deployment.yaml"
		sh "kubectl apply -f ./${STEP_NUM}/deploy/k8s/service.yaml"
		sh "kubectl rollout restart deployment guest-deployment -n guest-namespace-step2"
            }
        }
    }
}
